{# templates/components/product_header.html.twig #}
<div class="flex justify-between items-center">
    {# Left: Icon + Title #}
    <div class="flex items-center gap-1">
        {{ ux_icon(title_icon|default('ic:baseline-list'), { class: 'w-6 h-6 inline-block text-gray-800', 'aria-hidden': true }) }}
        <p class="text-lg font-bold text-gray-800">{{ title|default('Tiêu đề') }}</p>
    </div>

    {# Right: Action buttons (can be overridden) #}
    <div class="flex items-center gap-5">
        {% block actions %}
            <a href="{{ add_url|default(path('app_product_add')) }}" class="outline-none px-3 py-1 text-sm font-semibold border border-2 border-gray-800 rounded-sm bg-gray-800 text-white 
                hover:text-gray-800 hover:bg-white flex items-center gap-2 transition-all">
                {{ ux_icon(add_icon|default('gg:add'), { class: 'w-5 h-5' }) }}
                {{ add_label|default('Thêm sản phẩm') }}
            </a>
        {% endblock %}
    </div>
</div>


